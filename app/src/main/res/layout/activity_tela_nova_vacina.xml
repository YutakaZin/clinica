<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".TelaNovaVacina">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#63FF01F3"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Voltar"
            android:src="@drawable/arrow" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tx_novo_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Criar nova vacina"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nome_nova_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tx_nova_vacina" />

    <EditText
        android:id="@+id/dose_nova_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Quantidade de doses"
        android:inputType="text" />

    <EditText
        android:id="@+id/informacao_nova_vacina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Informações"
        android:inputType="text" />

    <Button
        android:id="@+id/bt_nova_vacina"
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="Criar conta" />

</LinearLayout>